<Page xmlns="http://www.nativescript.org/tns.xsd"
    xmlns:CheckBox="nativescript-checkbox"
    loaded="loaded"
    id="profile_page">
    <ActionBar title="Mi perfil" class="h1 extra_bold white bg_red">
        <NavigationButton text=" " android.systemIcon="ic_menu_back" tap="tapBack"/>
    </ActionBar>
    <ScrollView>
        <StackLayout class="p20">
            <Label  text="Nombres:" class="h4 p20_t" />
            <TextField  text="Milagros Loaiza" class="h2 black p20_b" />

            <Label  text="Dirección de mi domo:" class="h4 p20_t" />
            <TextField  text="Av. Javier Prado # 5454" class="h2 black p20_b" />

            <Label  text="Permitir acceso a mi domo:" class="h4 p20_t" />
            <CheckBox:CheckBox text="{{access?'Sí':'No'}}" checked="{{access}}" class="p20_b" /> 

            <Label  text="Permitir enviar audio:" class="h4 p20_t" />
            <CheckBox:CheckBox text="{{audio?'Sí':'No'}}" checked="{{audio}}" class="p20_b" /> 

            <Label  text="Nombres:" class="h4 p20_t" />
            <TextField  text="Victor Malaver" class="h2 black p20_b" />
        </StackLayout>
    </ScrollView>
</Page>